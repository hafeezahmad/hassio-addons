{
  "name": "OSCAM",
  "version": "1.1",
  "slug": "oscam",
  "description": "This add-on allows you to have a OSCAM-Server.",
  "arch": ["armv7", "aarch64", "amd64"],
  "startup": "application",
  "webui": "http://[HOST]:[PORT:12002]",
  "boot": "auto",
  "init": false,
  "uart": true,
  "ports": {
    "12000/tcp": 12000,
    "12001/tcp": 12001,
    "12002/tcp": 12002
  },
  "ports_description": {
    "12000/tcp": "OSCAM Server - cccam",
    "12001/tcp": "OSCAM Server - dvbapi",
    "12002/tcp": "OSCAM Web Interface"
  },
  "map": [
    "config:rw"
  ],
  "hassio_role": "default"
}
